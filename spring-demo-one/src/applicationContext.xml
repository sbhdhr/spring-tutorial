<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- Loading properties file here -->

	<context:property-placeholder location="classpath:sport.properties"/>

	
    <!-- Define your beans here -->
    
    
    <!-- Define the dependency -->
    <bean id="myFortuneService"
    	class="demo.spring.one.HappyFortuneService">
    </bean>
    
    <bean id="myCoach"
    	class="demo.spring.one.TrackCoach">
    	
    	<!-- Setup constructor injection -->
    	<constructor-arg ref="myFortuneService"/>
    	
    </bean>
    
  
    <bean id="myCricketCoach"
    	class="demo.spring.one.CricketCoach">
    	
    	<!-- Setup setter injection -->
    	<property name="fortuneService" ref="myFortuneService"/>
    	
    	
    	<!-- Inject literal values -->
    	<!--  <property name="emailAddress" value="thebestcoach@abc.com"/>
    	<property name="team" value="Kolkata Knight Riders"/>-->
    	
    	
    	<property name="emailAddress" value="${foo.email}"/>
    	<property name="team" value="${foo.team}"/>
    	
    </bean>
    

</beans>





